<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    Tags:
    <% f.fields_for :post_tags do |tag_builder|  %>
      <%= tag_builder.collection_check_boxes :name, Tag.all, :id, :name %><br>
      <%= tag_builder.label :name %><br>
      <%= tag_builder.text_field :name %><br>
      <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
